### Variables

set $mod Mod1
set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $scripts "$XDG_CONFIG_HOME/scripts"
set $filter ". | reverse | to_entries | .[] | select(.value.focused == true) | .key"
set $display swaymsg -rt get_outputs | jq $filter
set $menu bemenu-run -m $($display) | xargs swaymsg exec --
set $system (l)ock, (e)xit, (r)eboot, (s)hutdown

